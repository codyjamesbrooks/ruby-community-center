<ul class="flex gap-4">
  <% if user_signed_in? %>
    <li>
      <%= link_to "Account", "#" %>
    </li>
    <li>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
    </li>
  <% else %>
    <li>
      <%= link_to "Log in", new_user_session_path, class: "button-secondary" %>
    </li>
    <li>
      <%= link_to "Sign Up", new_user_registration_path, class: "button-primary" %>
    </li>
  <% end %>
</ul>
