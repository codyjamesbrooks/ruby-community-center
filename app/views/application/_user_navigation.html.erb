<ul class="flex gap-4">
  <% if user_signed_in? %>
    <li>
      <%= link_to t(".user_account"), "#" %>
    </li>
    <li>
      <%= button_to t(".sign_out"), destroy_user_session_path, method: :delete %>
    </li>
  <% else %>
    <li>
      <%= link_to t(".login"), new_user_session_path, class: "button-secondary" %>
    </li>
    <li>
      <%= link_to t(".sign_up"), new_user_registration_path, class: "button-primary" %>
    </li>
  <% end %>
</ul>
